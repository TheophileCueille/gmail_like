<div class="row-mailer">
<h1>Gmail like (ou presque)</h1>

<ul id="book-list">
  <% @books.each do |book| %>
    <li class="list-group-item" id="liste">"<%= book.title %>" by <b><%= book.author  %></b>
    <%= link_to 'Delete', book_path(book), method: :delete, data: {confirm: "Are you sure"}, remote: true %> </li>
  <% end %>
</ul>
</div>
<div class="form">
 <%= form_tag(books_path, method: :post, class: "form", remote: true) do %>

    <label for="title">Title
    <%= text_field_tag  :title %>

    <label for="author">author
    <%= text_field_tag  :author %>

    <%= submit_tag 'create', :name => 'commit'%>
  <% end %>
</div>

</div>